package org.cuatrovientos.dam.psp.tamagotchis;

import java.util.Random;

public class Tamagotchi extends Thread {
	
	//Diferentes estados de los tamagotchis
	public enum EstadoTamagotchi {
	    OCIOSO,
	    COMIENDO,
	    JUGANDO,
	    LIMPIANDOSE,
	    MUERTO
	}
	
    private String nombre;
    private EstadoTamagotchi estado;
    private int suciedad;
    private boolean vivo;
    private long tiempoCreacion;
    private Cuidador cuidador;
    private Random random;
    
    public String getIdTamagotchi() { return nombre; }
    public EstadoTamagotchi getEstado() { return estado; }
    public int getSuciedad() { return suciedad; }
    public boolean isVivo() { return vivo; }
    
    public boolean puedeSerDestruido() {
        return estado == EstadoTamagotchi.OCIOSO && vivo;
    }
    
    public boolean estaOcioso() {
        return estado == EstadoTamagotchi.OCIOSO && vivo;
    }
    
    public Tamagotchi(String nombre, Cuidador cuidador) {
        this.nombre = nombre;
        this.cuidador = cuidador;
        this.estado = EstadoTamagotchi.OCIOSO;
        this.suciedad = 0;
        this.vivo = true;
        this.tiempoCreacion = System.currentTimeMillis();
        this.random = new Random();
    }
    
    @Override
    public void run() {
        // Hilo para controlar la suciedad
        Thread hiloSuciedad = new Thread(() -> {
            while (vivo) {
                try {
                    Thread.sleep(20000); // 20 segundos
                    if (estado != EstadoTamagotchi.LIMPIANDOSE && estado != EstadoTamagotchi.MUERTO) {
                        suciedad++;
                        
                        if (suciedad == 5) {
                            System.out.println(nombre + ": Estoy empezando a estar muy sucio!");
                        } else if (suciedad >= 10) {
                            System.out.println(nombre + " ha muerto por exceso de suciedad!");
                            morir();
                        }
                    }
                } catch (InterruptedException e) {
                    break;
                }
            }
        });
        
        // Hilo para controlar el tiempo de vida
        Thread hiloVida = new Thread(() -> {
            while (vivo) {
                try {
                    Thread.sleep(1000); // Revisar cada segundo
                    long tiempoVida = (System.currentTimeMillis() - tiempoCreacion);
                    
                    if (tiempoVida >= 300000) { // 5 minutos = 300000 ms
                        System.out.println(nombre + ": Mi tiempo ha terminado!");
                        morir();
                    }
                } catch (InterruptedException e) {
                    break;
                }
            }
        });
        
        hiloSuciedad.start();
        hiloVida.start();
    }
    
    public boolean comer() {
        if (estado != EstadoTamagotchi.OCIOSO || !vivo) {
            return false;
        }
        
        estado = EstadoTamagotchi.COMIENDO;
        System.out.println(nombre + " empieza a comer...");
        
        // Tiempo de comida aleatorio entre 3-8 segundos
        int tiempoComida = random.nextInt(6) + 3;
        
        new Thread(() -> {
            try {
                Thread.sleep(tiempoComida * 1000);
                {
                    if (vivo) {
                        System.out.println(nombre + " ha terminado de comer. Tardo " + tiempoComida + " segundos");
                        estado = EstadoTamagotchi.OCIOSO;
                    }
                }
            } catch (InterruptedException e) {
                Thread.currentThread().interrupt();
            }
        }).start();
        
        return true;
    }
    
    public boolean jugar() {
        if (estado != EstadoTamagotchi.OCIOSO || !vivo) {
            return false;
        }
        
        estado = EstadoTamagotchi.JUGANDO;
        System.out.println(nombre + " comienza a jugar...");
        
        new Thread(() -> {
            while (true) {
                {
                    if (estado != EstadoTamagotchi.JUGANDO || !vivo) break;
                }
                
                int num1 = random.nextInt(9) + 1;
                int num2 = random.nextInt(9) + 1;
                int resultado = num1 + num2;
                
                if (resultado < 10) {
                    System.out.println(nombre + ": Cuanto es " + num1 + " + " + num2 + "?");
                    boolean respuestaCorrecta = cuidador.responderPregunta(nombre, resultado);
                    
                    if (respuestaCorrecta) {
                        
                            if (vivo) {
                                System.out.println(nombre + ": Respuesta correcta! Termino de jugar");
                                estado = EstadoTamagotchi.OCIOSO;
                            }
                        
                        break;
                    } else {
                        System.out.println(nombre + ": Respuesta incorrecta, sigo jugando...");
                    }
                }
                
                try {
                    Thread.sleep(2000); // Espera antes de nueva pregunta
                } catch (InterruptedException e) {
                    break;
                }
            }
        }).start();
        
        return true;
    }
    
    public boolean limpiar() {
        if (estado != EstadoTamagotchi.OCIOSO || !vivo) {
            return false;
        }
        
        estado = EstadoTamagotchi.LIMPIANDOSE;
        System.out.println(nombre + " comienza a limpiarse...");
        
        new Thread(() -> {
            try {
                Thread.sleep(5000); // 5 segundos para limpiarse
                
                    if (vivo) {
                        suciedad = 0;
                        System.out.println(nombre + " esta limpio!");
                        estado = EstadoTamagotchi.OCIOSO;
                    }
                
            } catch (InterruptedException e) {
                Thread.currentThread().interrupt();
            }
        }).start();
        
        return true;
    }
    
    public void morir() {
        vivo = false;
        estado = EstadoTamagotchi.MUERTO;
        System.out.println(nombre + " ha muerto.");
    }
        
}